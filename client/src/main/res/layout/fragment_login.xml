<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:scrollbars="none">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingBottom="24dp"
        android:stretchColumns="3">

        <TableRow>

            <TextView
                style="@style/LoginFieldLabel"
                android:labelFor="@id/server_host_field"
                android:text="@string/serverHostLogin" />

            <EditText
                android:id="@+id/server_host_field"
                style="@style/LoginTextField"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/LoginFieldLabel"
                android:labelFor="@id/server_port_field"
                android:text="@string/serverPortLogin" />

            <EditText
                android:id="@+id/server_port_field"
                style="@style/LoginTextField"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/LoginFieldLabel"
                android:labelFor="@id/user_name_field"
                android:text="@string/userNameLogin" />

            <EditText
                android:id="@+id/user_name_field"
                style="@style/LoginTextField"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/LoginFieldLabel"
                android:labelFor="@id/password_field"
                android:text="@string/passwordLogin" />

            <EditText
                android:id="@+id/password_field"
                style="@style/LoginTextField"
                android:inputType="textPassword" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/LoginFieldLabel"
                android:labelFor="@id/first_name_login_field"
                android:text="@string/firstNameLogin" />

            <EditText
                android:id="@+id/first_name_login_field"
                style="@style/LoginTextField"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/LoginFieldLabel"
                android:labelFor="@id/last_name_login_field"
                android:text="@string/lastNameLogin" />

            <EditText
                android:id="@+id/last_name_login_field"
                style="@style/LoginTextField"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/LoginFieldLabel"
                android:labelFor="@id/email_field"
                android:text="@string/emailLogin" />

            <EditText
                android:id="@+id/email_field"
                style="@style/LoginTextField"
                android:inputType="textEmailAddress" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="end|center_vertical"
                android:text="@string/genderLogin" />

            <RadioGroup
                android:id="@+id/gender_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male_radio_button"
                    style="@style/LoginButton"
                    android:text="@string/male" />

                <RadioButton
                    android:id="@+id/female_radio_button"
                    style="@style/LoginButton"
                    android:text="@string/female" />
            </RadioGroup>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="48dp">

            <Button
                android:id="@+id/sign_in_button"
                style="@style/LoginButton"
                android:text="@string/signInButton" />

            <Button
                android:id="@+id/register_button"
                style="@style/LoginButton"
                android:text="@string/registerButton" />
        </LinearLayout>

    </TableLayout>

</ScrollView>